<!DOCTYPE html>
<html>
  <head>
    <title>GurpsCharacters</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <h1>GurpsCharacters</h1>

      <%= link_to "Home", root_path %>
      <%= link_to "About", about_path %>
      <%= link_to "Spells", spells_path %>
      <%= link_to "Skills", skills_path %>
      <%= link_to "Advantages", advantages_path %>
      <%= link_to "Disadvantages", disadvantages_path %>
      <%= link_to "Characters", characters_path %>

      Admin Powers: <input type="checkbox" id="show-button" onchange="toggleButtonVisibility()">
    </header>
    <%= yield %>
  </body>
</html>
