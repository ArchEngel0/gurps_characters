<div class="container-lg mx-auto">
  <p style="color: green"><%= notice %></p>

  <h1 class="mb-4">Skills</h1>

  <%= form_tag skills_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search skills", class: "form-control me-2" %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

  <div id="skills">
    <% @skills.each do |skill| %>
      <div class="card h-100 text-decoration-none">
        <div class="card-body d-flex justify-content-between">
          <%= render skill %>
          <p>
            <%= link_to "Show this skill", skill %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "New skill", new_skill_path %>

  <%= paginate @skills %>
</div>